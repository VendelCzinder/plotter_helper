<Window x:Class="PlotterHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlotterHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Select Image" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10,10,0,0" Click="SelectImage"/>
        <Button Content="Load Image" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10,35,0,0" Click="LoadImage"/>
        <Button Content="Convert Image" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10,60,0,0" Click="SavePdf" />
        <Image Name="preview"/>        
    </Grid>
</Window>
