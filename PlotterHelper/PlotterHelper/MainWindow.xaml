<Window x:Class="PlotterHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlotterHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Load Image" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10,10,0,0" Click="LoadImage" Width="100"/>
        <Button Content="Save to PDF" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10,35,0,0" Click="SavePdf" Width="100"/>
        <Border Height="300" Width="300" Background="Gray" Margin="115,10,385,124">
            <Image Name="preview" Stretch="Uniform"/>
        </Border>
    </Grid>
</Window>
